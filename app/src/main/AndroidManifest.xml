<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cerealbox.jobtrack" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/jobtrack"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TrackNewApplication"
            android:label="@string/title_activity_track_new_application"
            android:screenOrientation="portrait"
             >

        </activity>
        <activity
            android:name=".CheckAllApplications"
            android:label="@string/title_activity_check_all_applications"
             >

        </activity>
        <activity
            android:name=".SelectMonth"
            android:label="@string/title_activity_select_month"
            >
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".EditApplication"
            android:label="@string/title_activity_edit_application"
            android:screenOrientation="portrait"
             >

        </activity>
        <activity
            android:name=".SearchResultsActivity"
            android:label="@string/title_activity_search_results"
             >
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UpcomingInterviews"
            android:label="@string/title_activity_upcoming_interviews" >
        </activity>
    </application>

</manifest>
